{
  "manifest_version": 3,
  "name": "Absconditus",
  "version": "1.0",
  "description": "A browser extension for the Absconditus password manager.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "storage",      
    "scripting"     
  ],
  "host_permissions": [
    "http://127.0.0.1:5000/*"
  ],
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "css": ["content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon.png"],
      "matches": ["<all_urls>"]
    }
  ]
}